# Configuration du serveur Snipex Pro
# Copiez ce fichier vers .env et remplissez les valeurs

# Sécurité
JWT_SECRET=votre-jwt-secret-super-securise-changez-moi
ADMIN_TOKEN=votre-admin-token-secret-changez-moi

# Base de données (pour développement local)
DATABASE_URL=sqlite:./snipex.db

# Configuration du serveur
NODE_ENV=development
PORT=3000

# CORS (domaines autorisés)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://votre-domaine.com

# Rate limiting
RATE_LIMIT_POINTS=100
RATE_LIMIT_DURATION=60

# Logs
LOG_LEVEL=info
LOG_FILE=./logs/snipex.log

# TELEGRAM BOT - NOTIFICATIONS AUTOMATIQUES
# Créez un bot via @BotFather sur Telegram
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
# ID du groupe privé où envoyer les notifications
TELEGRAM_CHAT_ID=-1001234567890

# Notifications optionnelles
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/votre-webhook 
